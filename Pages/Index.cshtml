@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<!-- HERO SECTION -->
<section class="hero-section text-white text-center">
    <div class="hero-text text-center">
        <h1 class="display-4 fw-bold">Your Hair, Your Identity</h1>
        <p class="lead fst-italic">Our Expertise</p>
        <div class="mt-4">
            <a href="https://app.squareup.com/appointments/buyer/widget/xmf1z2ab7gvv8c/LTK8WRYMMZMZV" class="btn btn-dark mt-4">BOOK NOW</a>
            <a href="#about" class="btn btn-outline-light btn-lg learn-more">Learn More</a>
        </div>
    </div>
</section>

<!-- wave divider -->
<!-- ABOUT SECTION -->
<section class="about-section py-7" id="about">
    <div class="about-inner px-5 py-5 shadow rounded-4  mx-auto" style="max-width: 1200px;">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0 text-center">
                <img src="/Images/karmella-profile-new.jpg" alt="Karmella" class="expert-img" />
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold display-5 mb-4">Meet Your Expert</h2>
                <p class="fs-5">
                    Karmella is a licensed stylist with a passion for healthy, beautiful hair. From sleek styles to protective braids, she brings out the best in every client. Her mission? Make you feel as good as you look.
                </p>
                <a href="https://app.squareup.com/appointments/buyer/widget/xmf1z2ab7gvv8c/LTK8WRYMMZMZV" class="btn btn-dark mt-4">BOOK NOW</a>
            </div>
        </div>
    </div>
</section>




<!-- TESTIMONIALS -->
<section class="testimonials-section py-5 text-center">
    <div class="bg-overlay">
        <div class="testimonial-inner mx-auto px-4" style="max-width: 800px;">
            <h2 class="mb-5 fw-bold" style="font-family: 'Playfair Display', serif;">Here's What Others Think</h2>

            <div id="testimonialCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <blockquote class="testimonial-card position-relative">
                            <i class="quote-icon">“</i>
                            <p>"Karmella made me feel so comfortable. My hair looks amazing and I’ve already booked again!"</p>
                            <footer class="blockquote-footer mt-3">– Alicia B.</footer>
                        </blockquote>
                    </div>
                    <div class="carousel-item">
                        <blockquote class="testimonial-card position-relative">
                            <i class="quote-icon">“</i>
                            <p>"Best stylist in town, hands down. She listened and brought my vision to life."</p>
                            <footer class="blockquote-footer mt-3">– Jasmine T.</footer>
                        </blockquote>
                    </div>
                </div>
                <!-- Light, elegant arrows outside the quote box -->
                <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                    <span class="carousel-arrow">&#10094;</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                    <span class="carousel-arrow">&#10095;</span>
                </button>
            </div>
        </div>
    </div>
</section>


@{
    var imageFiles = new[] {
        "photo1.jpg",
        "photo2.jpg",
        "photo3.jpg",
        "photo4.jpg",
        "photo5.jpg",
        "photo6.jpg",
        "photo7.jpg",
        "photo8.jpg"
    };
}

<!-- GALLERY -->
<section class="gallery-section my-5 text-center">
    <h2 class="mb-4">It’s Okay to Take a Peep</h2>
    <div class="container">
        <div class="row g-4">
            @foreach (var file in imageFiles)
            {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="gallery-item">
                    <img src="@($"/Images/Gallery/{file}")" class="img-fluid rounded shadow-sm" alt="Client Style" />
                </div>
            </div>
            }
        </div>
    </div>
</section>

<!-- SERVICE HIGHLIGHT -->
<!-- CTA -->
<section class="cta-section text-center my-5 booking-widget">
    <h2 class="mb-3">What Are You Waiting For?</h2>
    <a href="https://app.squareup.com/appointments/buyer/widget/xmf1z2ab7gvv8c/LTK8WRYMMZMZV" class="btn btn-dark mt-4">BOOK NOW</a>

</section>


<!-- FOOTER -->
<footer class="site-footer text-white border-top mt-5 pt-5 pb-4" style="background-color: #111;">
    <div class="container">
        <div class="row text-center text-md-start">
            <!-- Logo + Tagline -->
            <div class="col-md-4 mb-4">
                <img src="/Images/Gallery/logo-footer.png" alt="Touch By Kae's Hair Studio" style="height: 50px;" class="mb-3">
                <p class="text-muted small">Where confidence begins with great hair.</p>
            </div>

            <!-- Contact Info -->
            <div class="col-md-4 mb-4">
                <h6 class="text-uppercase fw-bold mb-3" style="color: var(--color-gold);">Contact</h6>
                <p class="mb-2"><i class="bi bi-telephone me-2"></i> <span style="color: #ccc;">(217) 413-8687</span></p>
                <p><i class="bi bi-envelope me-2"></i> <a href="mailto:hello@karmellashair.com" style="color: #ccc; text-decoration: none;">hello@karmellashair.com</a></p>
            </div>

            <!-- Salon Hours -->
            <div class="col-md-4 mb-4">
                <h6 class="text-uppercase fw-bold mb-3" style="color: var(--color-gold);">Salon Hours</h6>
                <p class="mb-2">Wed–Sat: <strong>9am–7pm</strong></p>
                <p class="mb-0">Closed: Sun–Tues</p>
            </div>
        </div>

        <div class="border-top pt-3 mt-4 text-center small text-muted">
            &copy; 2025 Touch By Kae’s Hair Studio. All rights reserved. · <a href="/Privacy">Privacy Policy</a> · Built by <a href="https://www.fontayneporter.com" class="text-muted text-decoration-underline">Fontayne Porter</a>
        </div>
    </div>

</footer>
